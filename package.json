{
    "name":            "@tendermint/amino-js",
    "description":     "tendermint/go-amino for JavaScript",
    "license":         "MIT",
    "repository":      {
        "type": "git",
        "url":  "https://github.com/cosmos/amino-js.git"
    },
    "publishConfig":   {
        "access": "public"
    },
    "version":         "0.1.0",
    "main":            "index.js",
    "types":           "index.d.ts",
    "scripts":         {
        "build":     "webpack --config build --progress --colors --display-error-details",
        "clean":     "rm -rf ./dist/*",
        "dirs":      "mkdir ./dist",
        "dist:dev":  "yarn clean && yarn go && NODE_ENV=development yarn build",
        "dist:prod": "yarn clean && yarn go:min && NODE_ENV=production yarn build && yarn gzip",
        "go":        "gopherjs build -v -o ./lib/Amino.js ./go/js/main.go",
        "go:min":    "yarn go -m",
        "go:wasm":   "GOOS=js GOARCH=wasm go build -o ./dist/Amino.wasm ./go/wasm/",
        "go:watch":  "yarn go -w",
        "gzip":      "gzip -kf ./dist/*.{js,map}",
        "gzip:wasm": "gzip -kf ./dist/*.wasm",
        "lint":      "eslint --ext .ts,.js .",
        "nuke":      "rm -rf **/node_modules yarn.lock",
        "prepare":   "tsc && yarn lint && yarn dist:prod && yarn test",
        "reset":     "yarn nuke && yarn",
        "setup":     "yarn dirs && yarn go && yarn build",
        "server":    "go run server.go",
        "static":    "cp ./static/* ./dist/",
        "test":      "jest --config ./test/jest.config.json",
        "wasm:exec": "cp \"$(go env GOROOT)/misc/wasm/wasm_exec.js\" ./dist/",
        "watch":     "yarn build --watch"
    },
    "dependencies":    { },
    "devDependencies": {
        "@babel/core":                      "7.4.5",
        "@babel/preset-env":                "7.4.5",
        "@babel/preset-typescript":         "7.3.3",
        "@types/jest":                      "24.0.13",
        "@types/node":                      "12.0.3",
        "@typescript-eslint/eslint-plugin": "1.9.0",
        "@typescript-eslint/parser":        "1.9.0",
        "babel-loader":                     "8.0.6",
        "eslint":                           "5.16.0",
        "eslint-loader":                    "2.1.2",
        "eslint-plugin-node":               "9.1.0",
        "jest":                             "24.8.0",
        "ts-jest":                          "24.0.2",
        "ts-loader":                        "6.0.1",
        "ts-node":                          "8.2.0",
        "typescript":                       "3.5.1",
        "webpack":                          "4.32.2",
        "webpack-cli":                      "3.3.2",
        "webpack-merge":                    "4.2.1"
    },
    "files":           [
        "dist",
        "lib/**/*.{ts,js,map}",
        "src/**/*.{ts,js}",
        "index.js",
        "index.d.ts",
        "package.json",
        "README.md",
        "tsconfig.json",
        "yarn.lock"
    ]
}
